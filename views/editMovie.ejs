<%- include('./partials/start.ejs') %>

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Add Movie</h4>
                            <form action="/admin/edit-movie/<%= editMovie._id %>" method="post"
                                enctype="multipart/form-data" class="forms-sample">
                                <div class="form-group">
                                    <label for="name">Movie Name</label>
                                    <input type="text" class="form-control" id="name" name="name"
                                        value="<%= editMovie.name %>" placeholder="Eg: Arafta Turkish series">
                                </div>
                                <div class="form-group">
                                    <label for="genre">Genre</label>
                                    <select class="form-control" id="genre" name="genre">
                                        <option selected>Select Genre</option>
                                        <option <%= editMovie.genre =="Action" ? "selected" : "" %> value="Action">Action
                                        </option>
                                        <option <%= editMovie.genre =="Adventure" ? "selected" : "" %>
                                            value="Adventure">Adventure</option>
                                        <option <%= editMovie.genre =="Comedy" ? "selected" : "" %> value="Comedy">Comedy
                                        </option>
                                        <option <%= editMovie.genre =="Crime" ? "selected" : "" %>
                                            value="Crime-Mystery">Crime & Mystery</option>
                                        <option <%= editMovie.genre =="Drama" ? "selected" : "" %> value="Drama">Drama
                                        </option>
                                        <option <%= editMovie.genre =="Horror" ? "selected" : "" %> value="Horror">Horror
                                        </option>
                                        <option <%= editMovie.genre =="Romance" ? "selected" : "" %>
                                            value="Romance">Romance</option>
                                        <option <%= editMovie.genre =="Sci-Fi" ? "selected" : "" %> value="Sci-Fi">Science
                                            Fiction (Sci-Fi)</option>
                                        <option <%= editMovie.genre =="Thriller-Suspense" ? "selected" : "" %>
                                            value="Thriller-Suspense">Thriller & Suspense</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="file">Movie Cover</label>
                                    <input type="file" id="file" name="file" class="form-control" accept="image/*">
                                    <img src="/<%= editMovie.file %>" alt="<%= editMovie.name %>" width="100px">
                                </div>
                                <div class="form-group">
                                    <label for="date">Release Date</label>
                                    <input type="date" value="<%= editMovie.date %>" class="form-control" name="date" id="date">
                                </div>
                                <div class="form-group">
                                    <label for="rating">Rating</label>
                                    <select class="form-control" id="rating" name="rating">
                                        <option value="">Select Rating</option>
                                        <option <%= editMovie.rating == "1" ? "selected" : "" %> value="1">1</option>
                                        <option <%= editMovie.rating == "2" ? "selected" : "" %> value="2">2</option>
                                        <option <%= editMovie.rating == "3" ? "selected" : "" %> value="3">3</option>
                                        <option <%= editMovie.rating == "4" ? "selected" : "" %> value="4">4</option>
                                        <option <%= editMovie.rating == "5" ? "selected" : "" %> value="5">5</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="des">Description</label>
                                    <textarea class="form-control" name="des" id="des" rows="10"><%= editMovie.des %></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary mr-2">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/end.ejs') %>