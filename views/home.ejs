<%- include('./partials/clientStart.ejs') %>

    <section class="hero">
        <div class="container hero-content">
            <span class="badge-title">Movfix</span>
            <h1>
                Unlimited <span>Movie</span>, TVs <br>
                Shows, & More.
            </h1>
            <div class="meta d-flex align-items-center gap-3 mt-4 flex-wrap">

                <span class="meta-box solid">PG 18</span>

                <span class="meta-box outline">HD</span>

                <span class="meta-text">Romance, Drama</span>

                <span class="meta-text">
                    <i class="bi bi-calendar-event"></i> 2021
                </span>

                <span class="meta-text">
                    <i class="bi bi-clock"></i> 128 min
                </span>
            </div>
            <a href="#" class="btn btn-watch mt-5">
                ▶ WATCH NOW
            </a>
        </div>
    </section>
    </div>


    <section class="movies-section py-5">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="section-title">Popular Movies</h2>
                <a href="#" class="view-all">View All</a>
            </div>

            <div class="row g-4">

                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="movie-card">
                        <div class="movie-img">
                            <img src="/assets2/images/action-img.jpeg" alt="Movie">
                        </div>
                        <div class="movie-info">
                            <h5>Avengers Endgame</h5>
                            <p>Action, Drama</p>
                            <div class="movie-meta">
                                <span>⭐ 8.5</span>
                                <span>2024-6-7</span>
                            </div>
                            <a href="#" class="btn btn-watch w-100 mt-3">Watch Now</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="movie-card">
                        <div class="movie-img">
                            <img src="/assets2/images/romance-img.jfif" alt="Movie">
                        </div>
                        <div class="movie-info">
                            <h5>Arafta</h5>
                            <p>Romance, Drama</p>
                            <div class="movie-meta">
                                <span>⭐ 8.9</span>
                                <span>2025-7-31</span>
                            </div>
                            <a href="#" class="btn btn-watch w-100 mt-3">Watch Now</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="movie-card">
                        <div class="movie-img">
                            <img src="/assets2/images/Thriller-img.jpg" alt="Movie">
                        </div>
                        <div class="movie-info">
                            <h5>Shaitaan</h5>
                            <p>Thriller</p>
                            <div class="movie-meta">
                                <span>⭐ 8.2</span>
                                <span>2024-10-12</span>
                            </div>
                            <a href="#" class="btn btn-watch w-100 mt-3">Watch Now</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="movie-card">
                        <div class="movie-img">
                            <img src="/assets2/images/jurassic-world-img" alt="Movie">
                        </div>
                        <div class="movie-info">
                            <h5>Jurassic World</h5>
                            <p>Adventure</p>
                            <div class="movie-meta">
                                <span>⭐ 8.8</span>
                                <span>2023-6-28</span>
                            </div>
                            <a href="#" class="btn btn-watch w-100 mt-3">Watch Now</a>
                        </div>
                    </div>
                </div>

                <% movies.forEach(movie=> { %>
                    <div class="col-lg-3 col-md-6 col-sm-12">

                        <div class="movie-card" onclick="window.location.href='/desc/<%= movie._id %>'">

                            <div class="movie-img">
                                <img src="<%= movie.file %>" alt="<%= movie.name %>">
                            </div>

                            <div class="movie-info">
                                <h5>
                                    <%= movie.name %>
                                </h5>
                                <p>
                                    <%= movie.genre %>
                                </p>

                                <div class="movie-meta">
                                    <span>⭐ <%= movie.rating %></span>
                                    <span>
                                        <%= movie.date %>
                                    </span>
                                </div>

                                <a href="/desc/<%= movie._id %>" class="btn btn-watch w-100 mt-3">
                                    Watch Now
                                </a>
                            </div>

                        </div>

                    </div>
                    <% }) %>

            </div>
        </div>
    </section>


    <%- include('./partials/clientEnd.ejs') %>