<%- include('./partials/clientStart.ejs') %>

    <section class="movies-section py-5">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-lg-10">

                    <div class="movie-card movie-detail-card">

                        <div class="row g-0">

                            <div class="col-md-5">
                                <div class="movie-img h-100">
                                    <img src="<%= movies.file %>" alt="<%= movies.name %>">
                                </div>
                            </div>

                            <div class="col-md-7">
                                <div class="movie-info h-100 d-flex flex-column justify-content-center">

                                    <h2 class="mb-2">
                                        <%= movies.name %>
                                    </h2>

                                    <p class="text-muted mb-3">
                                        <%= movies.genre %>
                                    </p>

                                    <div class="movie-meta mb-3">
                                        <span>⭐ <%= movies.rating %></span>
                                        <span>
                                            <i class="bi bi-calendar-event"></i>
                                            <%= movies.date %>
                                        </span>
                                    </div>

                                    <p class="movie-desc mb-4">
                                        <%= movies.desc %>
                                    </p>

                                    <a href="#" class="btn btn-watch w-fit">
                                        ▶ Watch Now
                                    </a>

                                </div>
                            </div>

                        </div>

                    </div>

                </div>
            </div>

        </div>
    </section>

    <%- include('./partials/clientEnd.ejs') %>